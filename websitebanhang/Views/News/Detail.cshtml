﻿@model websitebanhang.Models.EF.News
@{
    ViewBag.Title = Model.SeoTitle;
    ViewBag.SeoDescription = Model.SeoDescription;
    ViewBag.SeoKeyWord = Model.SeoKeywords;
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
<!-- Slider -->
<style>
    .news_section_container {
        margin-top: 130px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    @if (Model != null)
    {
        <div class="breadcrumbs d-flex flex-row align-items-center">
            <ul>
                <li><a href="/">Trang chủ</a></li>
                <li class="active"><a href="/tinatuc"><i class="fa fa-angle-right" aria-hidden="true"></i>Tin tức</a></li>
                <li class="active"><a href="/@Model.Alias-n@(Model.Id)" title="@Model.Title"><i class="fa fa-angle-right" aria-hidden="true"></i>@Model.Title</a></li>
            </ul>
        </div>

        <div class="row">
            <div class="col-md-12">
                <h1 class="title-news"> @Model.Title</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Model.Description
            </div>
            <div class="col-md-12">
                @Html.Raw(Model.Detail)
            </div>
        </div>
    }

</div>
